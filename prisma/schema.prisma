generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model chapter {
  chapterId   String    @id
  chapterName String
  classId     String
  teacherId   String
  classroom   classroom @relation(fields: [classId], references: [classId])
  user        user      @relation(fields: [teacherId], references: [userId])
  content     content[]
}

model classroom {
  classId   String     @id
  className String
  ownerId   String
  chapter   chapter[]
  user      user       @relation(fields: [ownerId], references: [userId])
  enrolled  enrolled[]
}

model content {
  fileId    String  @id
  chapterId String
  fileName  String
  fileUrl   String
  fileType  String
  classId   String  @default("Hello")
  chapter   chapter @relation(fields: [chapterId], references: [chapterId])
}

model enrolled {
  enrollId  String    @id
  studId    String
  classId   String
  status    String
  classroom classroom @relation(fields: [classId], references: [classId])
  user      user      @relation(fields: [studId], references: [userId])
}

model user {
  userId    String      @id
  name      String
  email     String
  password  String
  type      String
  chapter   chapter[]
  classroom classroom[]
  enrolled  enrolled[]
}
